<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;net5.0</TargetFrameworks>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <PropertyGroup>
        <Version>2.0.0</Version>
        <Description>A platform-agnostic command parser and dispatcher.</Description>
        <PackageReleaseNotes>
            Port to Remora.Results 2.0.0.
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Options" Version="5.0.0" />
      <PackageReference Include="Remora.Results" Version="2.0.0" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="IsExternalInit" Version="1.0.0" PrivateAssets="all" />
    </ItemGroup>

</Project>
