<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <PropertyGroup>
        <Version>1.2.1</Version>
        <Description>A platform-agnostic command parser and dispatcher.</Description>
        <PackageReleaseNotes>
            Pick the last over the first parser, allowing overrides.
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Options" Version="5.0.0" />
      <PackageReference Include="Remora.Results" Version="1.3.0" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' != 'net5.0'">
        <PackageReference Include="IsExternalInit.System.Runtime.CompilerServices" Version="1.0.0" />
    </ItemGroup>

</Project>
