<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;net5.0</TargetFrameworks>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <PropertyGroup>
        <Version>4.0.0</Version>
        <Description>A platform-agnostic command parser and dispatcher.</Description>
        <PackageReleaseNotes>
            Short names that start with digits should be treated as values (for negative numbers, etc).
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Options" Version="5.0.0" />
      <PackageReference Include="Remora.Results" Version="4.0.1" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="IsExternalInit" Version="1.0.0" PrivateAssets="all" />
    </ItemGroup>

</Project>
